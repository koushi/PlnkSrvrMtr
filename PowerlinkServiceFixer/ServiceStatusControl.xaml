<UserControl x:Class="PowerlinkServiceFixer.ServiceStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerlinkServiceFixer"
             mc:Ignorable="d" Height="35" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
            <Label Grid.Column="0" FontSize="18" Content="{Binding ServiceName}" VerticalAlignment="Top" Height="Auto" HorizontalAlignment="Left"/>
            <Ellipse Fill="{Binding StatusColor}" Grid.Column="2"  HorizontalAlignment="Left" Height="25" Stroke="Black" VerticalAlignment="Top" Width="25" Margin="0,5,0,0"/>
        
    </Grid>
</UserControl>
